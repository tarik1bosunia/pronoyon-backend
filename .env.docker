# Docker Environment Configuration for ReplyCompass
# Copy this to .env and update with your values

# ================================
# Django Settings
# ================================
DEBUG=False
SECRET_KEY=django-insecure-change-this-in-production-use-strong-random-key
DJANGO_SETTINGS_MODULE=config.settings
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# ================================
# Database Configuration
# ================================
DB_NAME=replycompass
DB_USER=replycompass_user
DB_PASSWORD=changeme_secure_password
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=changeme_redis_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ================================
# Celery Configuration
# ================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# ================================
# CORS Settings
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False

# ================================
# Email Configuration
# ================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# ================================
# AWS S3 Configuration (Optional)
# ================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_OBJECT_PARAMETERS={"CacheControl": "max-age=86400"}

# ================================
# Security Settings (Production)
# ================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# ================================
# Container Ports
# ================================
WEB_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443
DB_PORT=5432
REDIS_PORT=6379

# ================================
# Logging
# ================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ================================
# RBAC Settings
# ================================
RBAC_DEFAULT_ROLE=user

# ================================
# Application Settings
# ================================
SITE_NAME=ReplyCompass
SITE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
API_VERSION=v1

# ================================
# File Upload Settings
# ================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ================================
# Session Settings
# ================================
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ================================
# Development Settings (dev only)
# ================================
# Uncomment for development
# DEBUG=True
# ALLOWED_HOSTS=*
# CORS_ALLOW_ALL_ORIGINS=True
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ================================
# Monitoring & Analytics (Optional)
# ================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ================================
# Third-party Integrations (Optional)
# ================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ================================
# Social Auth (Optional)
# ================================
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
