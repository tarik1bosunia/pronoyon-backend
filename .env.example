# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Build Target: 'development' or 'production'
# - development: Uses Django dev server with hot-reload
# - production: Uses Gunicorn with multiple workers
BUILD_TARGET=development

# Django Settings Module
# Options: config.settings.local, config.settings.docker, config.settings.production
# For development with watch: config.settings.docker
# For production: config.settings.production
DJANGO_SETTINGS_MODULE=config.settings.docker

# =============================================================================
# DEBUG MODE
# =============================================================================
# IMPORTANT: 
# - Set to True for development (enables Django dev server with auto-reload)
# - Set to False for production (uses Gunicorn)
# Development: DEBUG=True with BUILD_TARGET=development and "docker compose up --watch"
# Production: DEBUG=False with BUILD_TARGET=production and "docker compose up"
DEBUG=True

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-use-50-chars-minimum
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Environment name (for logging/monitoring)
ENVIRONMENT=development

# =============================================================================
# FRONTEND CONFIGURATION & CORS
# =============================================================================
# Primary/default frontend URL (used for email links, redirects, OAuth callbacks)
FRONTEND_URL=http://localhost:3000

# All frontend URLs (comma-separated, for multiple frontend applications)
# Examples: 
#   - Admin panel: http://localhost:3001
#   - User app: http://localhost:3000
#   - Mobile web: http://localhost:5173
FRONTEND_URLS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# CORS allowed origins (comma-separated, no spaces, no trailing slashes)
# Should include all frontend URLs that need to access the API
# Must match exact URLs including protocol and port
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# CSRF trusted origins (comma-separated, no spaces)
# Backend URLs that should be trusted for CSRF validation
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=replycompass_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis Channel Layer (for Django Channels)
REDIS_CHANNEL_DB=1

# =============================================================================
# CELERY SETTINGS
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/3

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@replycompass.com
ADMIN_EMAIL=admin@replycompass.com

# =============================================================================
# JWT SETTINGS
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# =============================================================================
# GOOGLE OAUTH SETTINGS
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# BKASH PAYMENT GATEWAY SETTINGS
# =============================================================================
# Get credentials from: https://developer.bka.sh/
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_SANDBOX=True
BKASH_CALLBACK_URL=http://localhost:3000/payment/callback

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_DOMAIN=
CSRF_COOKIE_DOMAIN=

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# ADMIN CUSTOMIZATION (Production)
# =============================================================================
ADMIN_URL=admin/

# =============================================================================
# SENTRY (Production Error Tracking)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# AWS S3 (Production Media Storage)
# =============================================================================
USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=replycompass-media
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# SUPERUSER CREDENTIALS (for initial setup only)
# =============================================================================
DJANGO_SUPERUSER_EMAIL=admin@replycompass.com
DJANGO_SUPERUSER_PASSWORD=admin123456
DJANGO_SUPERUSER_FIRST_NAME=Admin
DJANGO_SUPERUSER_LAST_NAME=User
